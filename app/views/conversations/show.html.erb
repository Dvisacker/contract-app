<div class="bring-down page-container">
<h1><%= @conversation.subject%></h1>

<% @conversation.receipts_for(current_user).each do |receipt| %>
	<div>
		<div><%= receipt.message.sender.username %> commented : </div>
	    <p><%= receipt.message.body %></p>
	</div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>

  <div class="field">
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <p><strong>Write</strong></p>
          <%= text_area_tag :body %>
        </div>
      </div>
    </div>
  </div>
  </div>

<div class="form-group ">
  <div class="row">
      <div class="col-sm-offset-2 col-sm-8 margin-top-bottom-lg">
          <%= submit_tag "Message", class: "submit-button btn btn-medium btn-margin" %>
      </div>
      </div>
  </div>
<% end %>



