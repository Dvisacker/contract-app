<div class="header-container">
	<h2>Forgot your password?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :email, class: "col-sm-offset-2 col-sm-2 control-label" %>
      <div class="col-sm-4">
          <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
  </div>

   <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
          <%= f.submit "Sent me password instructions", class: "btn btn-primary btn-lg gradient" %>
      </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
