  <div class="field">
    <%= f.text_area :code, cols: "30", rows: "10" %>
  </div>
  <div class="field">
    <%= f.text_field :hint1 %>
  </div>
  <div class="field">
    <%= f.text_field :hint2 %>
  </div>
