<style>
  .font-bigger
  {
    font-size: 16px
  }

  .towards-bottom {
    margin-top: 100px;
  }

  .margin-top {
    margin-top: 50px;
  }
</style>

<div class="page-container">
  <div class="bring-down page-padding">

    <h2>Challenge Statement</h2><br>
      <div class="row">
        <div class="col-sm-12">
          <div class="panel-bordered">
            <div class="panel-body">
              <p class = "text-justify font-bigger">
                <strong><%= @challenge.title %></strong><br><br>
                <%= @challenge.body %>
              </p>
              </div>
            </div>
          </div>
        </div>
        <hr>

        <h2>Challenge Code</h2><br>
          <div class="row">
            <div class="col-sm-12">
              <div class="panel-bordered">
                <div class="panel-body">
                  <textarea class = "codemirror-textarea"><%= @challenge.code %></textarea>
                </div>
                <div class="panel-footer"> 
                 <% if @challenge.hint1 != "" || @challenge.hint2 != "" %>
                    <p class = "text-justify">
                      <strong>Hint 1:</strong>
                      <%= @challenge.hint1 %>
                      <br>
                      <strong>Hint 2:</strong>
                      <%- if current_user %>
                        <%= @challenge.hint2 %>
                        <% else %>
                        <a href="#" class="btn btn-medium" id="open-panel-button1">sign-in to view</a>
                        <!-- <div class="btn" id="open-panel-button"> -->
                          <!-- Connect to see the hints -->
                        <!-- </div> -->
                      <%- end %>
                    <p>
                  <% else %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>




          <%- if current_user %>

            <div class="row">
              <div class="col-sm-offset-3 col-sm-6">
                <div class="submit-button btn btn-medium btn-margin margin-top-bottom">
                  <%= link_to 'view submissions', challenge_submissions_path(@challenge.id) %>
                </div>
              </div>
            </div>

            <div class="row ">
              <div class="col-sm-offset-3 col-sm-6">
                <div class="btn btn-medium btn-margin margin-top-bottom">
                  <%= link_to 'submit your solution', new_challenge_submission_path(@challenge.id) %>
                </div>
              </div>
            </div>

            <% else %> 
            <div class="row margin-top">
              <div class="col-sm-offset-3 col-sm-6">
                <div class="submit-button btn btn-medium btn-margin margin-top-bottom" id= "open-panel-button2" >
                  sign-in to view comments and post solutions
                </div>
              </div>
            </div>

          <% end %>

          <%- if current_user %>
              <%= render 'comments/commentbox' %>
          <% end %>
  
  </div>
</div>



