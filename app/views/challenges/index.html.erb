<p id="notice"><%= notice %></p>

<h1>Listing Challenges</h1>

<table class="table table-striped col-sm-8">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Challenge</th>
      <th>Time created</th>
      <th>Code</th>
      <th>Hint1</th>
      <th>Hint2</th>
      <th>User viewcount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.title %></td>
        <td><%= challenge.body %></td>
        <td><%= challenge.challenge_id %></td>
        <td><%= challenge.time_created %></td>
        <td><%= challenge.code %></td>
        <td><%= challenge.hint1 %></td>
        <td><%= challenge.hint2 %></td>
        <td><%= challenge.user_viewcount %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

