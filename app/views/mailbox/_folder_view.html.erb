<div class="row">
	<div class="col-md-4">
		<div class="panel">
			<div class="panel-body">
				<%= render partial: 'mailbox/folder' %>
			</div>
		</div>
		<%= link_to "New message", new_conversation_path, class: "btn btn-margin" %>
	</div>

	<div class="col-md-8">
		<div class="panel">
			<div class="panel-body">
				<% if is_conversation %>
					<%= render partial: 'conversations/form' %>
				<% else %>
					<% if messages.length > 0 %>
					<%= render partial: 'conversations/conversation', collection: messages %>
					<% else %>
					<p> There are no messages in your inbox</p>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>


</div>