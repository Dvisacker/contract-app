<div class="row">
	<div class="spacer"></div>
	<div class="col-md-12">
		
		
		<div class="spacer"></div>
	</div>

	<div class="col-md-4">
		<div class="panel">
			<div class="panel-body">
				<%= render partial: 'mailbox/folder' %>
			</div>
		</div>
		<%= link_to "New message", new_conversation_path, class: "btn btn-margin" %>
	</div>

	<div class="col-md-8">
		<div class="panel">
			<div class="panel-body">
				<% if is_conversation %>
					<%= render partial: 'conversations/form' %>
				<% else %>
					<%= render partial: 'conversations/conversation', collection: messages %>
				<% end %>
			</div>
		</div>
	</div>


</div>